{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build source",
            "type": "shell",
            "command": "powershell",
            "args": [
                "-ExecutionPolicy", 
                "Bypass",
                "-NoProfile",
                "-Command",
                "& {.\\build.ps1; code '${workspaceFolder}\\dist.luau'}"
            ],
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "dedicated",
                "clear": false,
                "close": false
            }
        }
    ]
}
